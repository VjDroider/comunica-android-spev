<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="60dp">

    <ImageView
            android:layout_width="52dp"
            android:layout_height="0dp" app:srcCompat="@drawable/ic_vector_circle_bell"
            android:id="@+id/imageTypeId" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:text="Sanchez Edmundo"
            android:layout_width="0dp"
            android:layout_height="21dp"
            android:id="@+id/textViewWhoId"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/imageTypeId" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintBottom_toTopOf="@+id/textViewMsgErrorId"
            app:layout_constraintEnd_toStartOf="@+id/imageViewSent" android:layout_marginEnd="16dp"/>
    <ImageView
            android:layout_width="12dp"
            android:layout_height="24dp" app:srcCompat="@drawable/ic_circle_green"
            android:id="@+id/imageViewSent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"/>
    <ImageView
            android:layout_width="12dp"
            android:layout_height="24dp" app:srcCompat="@drawable/circle_blue"
            android:id="@+id/imageViewRead" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp" app:srcCompat="@drawable/ic_icon_mnsent"
            android:id="@+id/imageErrorId"
            app:layout_constraintTop_toBottomOf="@+id/textViewWhoId" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintStart_toEndOf="@+id/imageTypeId"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/textViewMsgErrorId"
            app:layout_constraintTop_toBottomOf="@+id/textViewWhoId" android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/imageErrorId" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintEnd_toStartOf="@+id/imageViewRead"
            android:layout_marginEnd="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
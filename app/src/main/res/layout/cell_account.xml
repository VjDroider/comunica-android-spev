<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="35dp">

    <TextView
        android:id="@+id/textViewConceptId"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:lines="1"
        android:text="Edmundo Bachillerato"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textViewbalanceId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/textViewbalanceId"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginEnd="7dp"
        android:background="@color/com_facebook_likeview_text_color"
        android:clickable="false"
        android:text="5050"
        android:textSize="10dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/arrowId"
        app:layout_constraintStart_toEndOf="@+id/textViewConceptId"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/arrowId"
        android:layout_width="32dp"
        android:layout_height="41dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewbalanceId"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/right_arrow" />
</androidx.constraintlayout.widget.ConstraintLayout>
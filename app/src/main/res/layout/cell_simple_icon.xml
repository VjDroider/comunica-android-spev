<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="40dp">

    <ImageView
        android:id="@+id/leftIconId"
        android:layout_width="17dp"
        android:layout_height="19dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/singleTextId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star" />

    <ImageView
        android:id="@+id/rightIconId"
        android:layout_width="19dp"
        android:layout_height="26dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/singleTextId"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/right_arrow" />

    <TextView
        android:id="@+id/singleTextId"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="Ubicaciones"
        android:textAlignment="viewStart"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/rightIconId"
        app:layout_constraintEnd_toStartOf="@+id/rightIconId"
        app:layout_constraintStart_toEndOf="@+id/leftIconId"
        app:layout_constraintTop_toTopOf="@+id/rightIconId"
        tools:ignore="RtlCompat" />

</androidx.constraintlayout.widget.ConstraintLayout>
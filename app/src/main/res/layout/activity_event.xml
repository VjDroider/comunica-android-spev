<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="edu.campusvirtual.comunica.activities.EventActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imageViewHeader"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginTop="10dp"
            android:text="Uno"
            android:textAlignment="center"
            android:textSize="17dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="135dp" />

        <TextView
            android:id="@+id/textViewPlace"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginTop="10dp"
            android:text="Lugar"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="171dp" />

        <TextView
            android:id="@+id/textViewInitial"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginTop="10dp"
            android:text="Viernes, 02 de marzo del 2018 a las 10:00"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="205dp" />

        <TextView
            android:id="@+id/textViewEnd"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:text="Viernes, 02 de marzo del 2018 a las 11:00"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="245dp" />

        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="10dp"
            android:text="Descripcion"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="283dp" />


        <Button
            android:id="@+id/buttonSchedule"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="10dp"
            android:text="Agregar a mi calendario"
            android:textColor="@color/colorWhite"
            tools:layout_editor_absoluteX="16dp"
            android:background="@drawable/bg_rounded"
            tools:layout_editor_absoluteY="446dp" />
    </LinearLayout>

</ScrollView>

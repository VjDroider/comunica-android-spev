<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="60dp">

    <TextView
            android:text="16:08"
            android:layout_width="42dp"
            android:layout_height="22dp"
            android:textSize="12dp"
            android:id="@+id/reportHourId" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="Tema de la notificacion o mensaje"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_height="26dp"
            android:id="@+id/ReportTemaId" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/reportHourId"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_circle_bell"
            android:id="@+id/reportImageBellId" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/reportHourId" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:text="120/120"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:id="@+id/reportTextBellId"
            app:layout_constraintTop_toBottomOf="@+id/ReportTemaId" app:layout_constraintStart_toEndOf="@+id/reportImageBellId"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_circle_email"
            android:id="@+id/reportImageEmailId"
            app:layout_constraintTop_toBottomOf="@+id/ReportTemaId" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintStart_toEndOf="@+id/reportTextBellId"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="120/120"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reportTextEmailId"
            android:textSize="10dp"
            app:layout_constraintTop_toBottomOf="@+id/ReportTemaId" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/reportImageEmailId" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>
    <ImageView
            android:layout_width="19dp"
            android:layout_height="25dp" app:srcCompat="@drawable/ic_icon_mnsent"
            android:id="@+id/reportImageErrorId"
            app:layout_constraintTop_toBottomOf="@+id/ReportTemaId" app:layout_constraintStart_toEndOf="@+id/reportTextEmailId"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reportTextErrorId" android:layout_marginStart="8dp"
            android:textSize="10dp"
            app:layout_constraintStart_toEndOf="@+id/reportImageErrorId"
            app:layout_constraintTop_toBottomOf="@+id/ReportTemaId" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
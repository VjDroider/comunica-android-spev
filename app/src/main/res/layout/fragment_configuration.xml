<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.configuration.ConfigurationFragment">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#efeff4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <fragment
                android:id="@+id/fragmentNotificationId2"
                android:layout_width="match_parent"
                class="edu.campusvirtual.comunica.fragments.configuration.AboutFragment"
                android:layout_height="wrap_content"></fragment>

            <fragment
                android:id="@+id/fragmentNotificationId4"
                android:layout_width="match_parent"
                class="edu.campusvirtual.comunica.fragments.configuration.SignatureFragment"
                android:layout_height="wrap_content"></fragment>
            <fragment
                android:id="@+id/fragmentNotificationId3"
                android:layout_width="match_parent"
                class="edu.campusvirtual.comunica.fragments.configuration.AccountFragment"
                android:layout_height="wrap_content"></fragment>
        </LinearLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

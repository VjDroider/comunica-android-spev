<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="65dp">

    <View
        android:id="@+id/viewStatusId"
        android:layout_width="8dp"
        android:layout_height="0dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/holo_green_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textViewStatusId"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewNameId"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Informatica II"
        app:layout_constraintBottom_toTopOf="@+id/textViewStatusId"
        app:layout_constraintStart_toStartOf="@+id/textViewStatusId"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/textViewStatusId"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Aprobada"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textViewScoreId"
        app:layout_constraintStart_toEndOf="@+id/viewStatusId"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameId" />

    <TextView
        android:id="@+id/textViewScoreId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8.80"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>